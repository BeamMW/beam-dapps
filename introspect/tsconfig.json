{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
		"outDir": "./ts",
    "incremental": true,
    "noImplicitReturns": true,
		"noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
		"types": ["node",
			"jasmine",
      "jasminewd2"
		],
		"baseUrl": "src/",
		"typeRoots": [
      "node_modules/@types", "./src/types/declarations"
    ],
		"paths": {
			"@assets/*" :["assets/*"],
			"@components/*": ["components/*"],
			"@logic/*": ["lib/logic/*"],
			"@utils/*": ["lib/utils/*"],
			"@constants/*": ["lib/constants/*"],
			"@lib/*": ["lib/*"],
			"@apptypes/*": ["types/*"]		
			
		},
    "allowJs": false,
    "downlevelIteration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization":true,
  },
  "exclude": [
    "node_modules"
  ],
	"include": ["**/*.ts", "tests/*", "src/types/declarations.d.ts"],
	
}